<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_top_sights_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.disen.tourguide.TopSightsDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imageDetails"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/image_height" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/desc_details"
        android:paddingLeft="@dimen/small"
        android:textSize="@dimen/extra_small_text"
        android:fontFamily="casual"
        android:textColor="@color/deuc"
        android:paddingRight="@dimen/smaller"
        android:paddingTop="@dimen/extra_small"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/smaller"
            android:layout_marginRight="@dimen/smaller"
            android:layout_marginTop="@dimen/extra_small"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/webpageIcon"
                style="@style/LinearStyle"
                >

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/detail_icon"
        android:src="@drawable/ic_language_black_24dp"
        android:tint="@color/lightOrange"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:text="Webpage"
        android:fontFamily="casual"
        android:id="@+id/detail_name"
        android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/direction"
                style="@style/LinearStyle">

                <ImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/second_detail_icon"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@color/lightOrange"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:text="Location"
                    android:fontFamily="casual"
                    android:id="@+id/scnd_detail_name"
                    android:layout_height="wrap_content" />
            </LinearLayout>


    </LinearLayout>

</LinearLayout>
    </ScrollView>

