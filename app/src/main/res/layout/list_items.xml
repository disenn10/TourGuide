<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/Xxtra_small"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/medium"
        android:layout_weight="0.5"
        android:id="@+id/image"
        android:layout_height="@dimen/medium" />
    <LinearLayout
        android:layout_marginLeft="@dimen/Xxtra_small"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/cuivre"
            android:textSize="@dimen/Xtra_small_text"
            android:id="@+id/name"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/desc"
            android:fontFamily="casual"
            android:textColor="@color/lightOrange"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/deuc"
            android:id="@+id/location"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_weight="0.5"
        android:tint="@color/lightOrange"
        android:layout_gravity="center_vertical"
        android:id="@+id/playButton"
        android:layout_height="wrap_content" />



</LinearLayout>